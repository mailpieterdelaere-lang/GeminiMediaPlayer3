#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/hid_usage.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        base_layer {
            bindings = <
                &kp C_PREV        /* Button 1 -> Previous Track */
                &kp C_PLAY_PAUSE  /* Button 2 -> Play / Pause */
                &kp C_NEXT        /* Button 3 -> Next Track */
            >;
        };
    };
};
