#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/hid_usage.h>
#include <dt-bindings/zmk/modifiers.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        base_layer {
            bindings = <
                &kp C_PREV         // Key 1 (on D2): Previous Track (Backward)
                &kp C_PLAY_PAUSE   // Key 2 (on D4): Play/Pause
                &kp C_NEXT         // Key 3 (on D6): Next Track (Forward)
            >;
        };
    };
};
