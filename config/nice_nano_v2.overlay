#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan_0;
        zmk,matrix-transform = &matrix_transform_0;
    };

    kscan_0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN_0";
        
        // ZMK Devicetree V2 format: <&controller pin>
        row-gpios = <&gpio0 2>, <&gpio0 4>, <&gpio0 6>;
        col-gpios = <&gpio0 18>;
        
        // Pin flag properties
        row-pull-downs; // Active High Rows (Input with Pull Down)
        col-pull-ups;   // Active Low Columns (Input with Pull Up)
    };

    matrix_transform_0: matrix_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <1>;
        columns = <3>;
        
        // Use the consolidated ZMK_MATRIX_TRANSFORM macro (Fixed in the previous step's logic)
        map = <ZMK_MATRIX_TRANSFORM(
            (0,0), (1,0), (2,0)
        )>;
    };

    &led_strip {
        status = "disabled";
    };
};
