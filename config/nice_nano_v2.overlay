#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan_0;
        zmk,matrix-transform = &matrix_transform_0;
    };

    kscan_0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN_0";
        
        row-gpios = <&gpio0 3 0>,
                    <&gpio0 4 0>;
        col-gpios = <&gpio0 5 0>,
                    <&gpio0 28 0>;

        row-pull-ups;
        col-pull-downs;
    };

    matrix_transform_0: matrix_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <2>;
        columns = <2>;

        // The "map" must be raw numbers, not macros or angled brackets.
        // For a 2x2 matrix, define 4 entries in row-major order:
        map = <0 1 2 3>;
    };

    &led_strip {
        status = "disabled";
    };
};
