/* Define the key matrix and pin assignments for the mediapad3 on nice_nano_v2. */

/ {
    chosen {
        // Point the system to the newly defined kscan node
        zmk,kscan = &kscan_0;
    };

    kscan_0: kscan_0 {
        compatible = "zmk,kscan-direct-gpios";
        label = "KSCAN_0";
        
        // Using '3' (GPIO_ACTIVE_LOW | GPIO_PULL_UP) for compatibility.
        // This is the correct numerical value we previously determined.
        direct-gpios = <&pro_micro_d 2 3>, // D2 (0x3)
                       <&pro_micro_d 4 3>, // D4 (0x3)
                       <&pro_micro_d 6 3>; // D6 (0x3)
    };
};
