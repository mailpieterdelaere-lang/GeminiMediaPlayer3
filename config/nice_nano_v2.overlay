/* Define the key matrix and pin assignments for the mediapad3 on nice_nano_v2. */

&kscan0 {
    compatible = "zmk,kscan-direct-gpios";
    label = "KSCAN_0";
    
    // Simplification: Temporary removal of complex flag group.
    direct-gpios = <&pro_micro_d 2 (GPIO_ACTIVE_LOW)>, // D2
                   <&pro_micro_d 4 (GPIO_ACTIVE_LOW)>, // D4
                   <&pro_micro_d 6 (GPIO_ACTIVE_LOW)>; // D6
};

// Ensure the chosen kscan is set to the one we defined.
/ {
    chosen {
        zmk,kscan = &kscan0;
    };
};
