/* Define the key matrix and pin assignments for the mediapad3 on nice_nano_v2. */

/ {
    chosen {
        zmk,kscan = &kscan_0;
    };

    kscan_0: kscan_0 {
        compatible = "zmk,kscan-direct-gpios";
        label = "KSCAN_0";
        
        // ðŸš€ FIX: DEFINE MATRIX SIZE (1 Row, 3 Columns)
        rows = <1>;
        columns = <3>;
        
        direct-gpios = <&pro_micro_d 2 3>, // D2
                       <&pro_micro_d 4 3>, // D4
                       <&pro_micro_d 6 3>; // D6
    };
};
