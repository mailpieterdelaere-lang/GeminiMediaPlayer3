// Required headers for ZMK and GPIO macros
#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/gpio/gpio.h> 

/* Define the key matrix and pin assignments for the custom nRF52840 board. */

/ {
    chosen {
        zmk,kscan = &kscan_0; 
        zmk,matrix-transform = &matrix_transform_0; 
    };

    kscan_0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix"; 
        label = "KSCAN_0";
        
        // CRITICAL FIX: Use direct numeric values for flags to satisfy the DTC.
        // (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN) = 3 (Pin Flags)
        row-gpios = <&gpio0 11 3>, 
                    <&gpio0 13 3>, 
                    <&gpio0 15 3>;
                     
        // CRITICAL FIX: Use direct numeric values for flags.
        // (GPIO_ACTIVE_LOW | GPIO_PULL_UP) = 3 (Pin Flags)
        col-gpios = <&gpio0 26 3>; 
    };

    matrix_transform_0: matrix_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <1>;
        columns = <3>;
        // Minimal single-line definition
        map = <ZMK_MATRIX_TRANSFORM_ROW_COLUMN_MAP(0, 0) ZMK_MATRIX_TRANSFORM_ROW_COLUMN_MAP(1, 0) ZMK_MATRIX_TRANSFORM_ROW_COLUMN_MAP(2, 0)>;
    };
};
