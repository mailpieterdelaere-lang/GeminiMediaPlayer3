#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/gpio/gpio.h> 

/* Define the key matrix and pin assignments for the custom nRF52840 board. */

/ {
    chosen {
        zmk,kscan = &kscan_0; 
        zmk,matrix-transform = &matrix_transform_0; 
    };

    kscan_0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix"; 
        label = "KSCAN_0";
        
        // CRITICAL FIX: Using ONLY two arguments (controller + pin number)
        // This is necessary if the board's base DTS defines pins this way.
        row-gpios = <&gpios 11>, <&gpios 13>, <&gpios 15>;
                     
        col-gpios = <&gpios 26>; 
    };
    
    // Now we must re-add the pull-up/pull-down flags explicitly outside the array:
    // This is how ZMK typically handles the 2-argument format.
    row-pull-downs; // Implies GPIO_PULL_DOWN for rows
    col-pull-ups;   // Implies GPIO_PULL_UP for columns
    
    // NOTE: If the compiler still fails, try removing the above two lines.

    matrix_transform_0: matrix_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <1>;
        columns = <3>;
        map = <ZMK_MATRIX_TRANSFORM_ROW_COLUMN_MAP(0, 0) ZMK_MATRIX_TRANSFORM_ROW_COLUMN_MAP(1, 0) ZMK_MATRIX_TRANSFORM_ROW_COLUMN_MAP(2, 0)>;
    };
};
