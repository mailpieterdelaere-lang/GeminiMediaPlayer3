/* Define the key matrix and pin assignments for the mediapad3 on nice_nano_v2. */

/ {
    chosen {
        // 1. Point the system to the kscan node we define below
        zmk,kscan = &kscan_0;
    };

    kscan_0: kscan_0 { // 2. CREATE the node using the label kscan_0
        compatible = "zmk,kscan-direct-gpios";
        label = "KSCAN_0";
        
        // 3. Use the confirmed working numerical value '3' 
        // which represents (GPIO_ACTIVE_LOW | GPIO_PULL_UP).
        direct-gpios = <&pro_micro_d 2 3>, // D2 (Active Low, Pull Up)
                       <&pro_micro_d 4 3>, // D4 (Active Low, Pull Up)
                       <&pro_micro_d 6 3>; // D6 (Active Low, Pull Up)
    };
};
