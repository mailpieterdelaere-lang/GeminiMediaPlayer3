#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan_0;
        zmk,matrix-transform = &matrix_transform_0;
    };

    kscan_0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN_0";
        
        // Define GPIOs using a multi-line format for robustness.
        row-gpios = <&gpio0 3 0> // P0.03
                    , <&gpio0 4 0> // P0.04
                    ;
        col-gpios = <&gpio0 5 0> // P0.05
                    , <&gpio0 28 0> // P0.28
                    ;

        row-pull-ups;
        col-pull-downs;
    };

    matrix_transform_0: matrix_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <2>;
        columns = <2>;
        
        // Final confirmed matrix map syntax
        map = <<ZMK_MATRIX_TRANSFORM( (0 0 0 1 1 0 1 1) )>>; 
    };

    &led_strip {
        status = "disabled";
    };
};
