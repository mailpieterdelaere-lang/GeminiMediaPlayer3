// CRITICAL FIX: Required to define the ZMK_MATRIX_TRANSFORM_ROW_COLUMN_MAP macro
#include <dt-bindings/zmk/matrix_transform.h>

/* Define the key matrix and pin assignments for the mediapad3 on nice_nano_v2. */

/ {
    chosen {
        // Link the chosen KSCAN node
        zmk,kscan = &kscan_0; 
        // CRITICAL FIX: Link the matrix transform node to define the keymap size
        zmk,matrix-transform = &matrix_transform_0; 
    };

    kscan_0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix"; 
        label = "KSCAN_0";
        
        // This configuration models a 3-row, 1-column physical setup (3 unique input pins).
        row-gpios = <&pro_micro_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&pro_micro_d 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&pro_micro_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
                     
        // The single column/strobe pin
        col-gpios = <&pro_micro_d 18 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; 
    };

    matrix_transform_0: matrix_transform_0 {
        compatible = "zmk,matrix-transform";
        // Logical (Keymap) size
        rows = <1>;
        columns = <3>;
        
        map = <
               ZMK_MATRIX_TRANSFORM_ROW_COLUMN_MAP(0, 0) // Keymap (Row 0, Col 0) -> Physical (Row 0, Col 0)
               ZMK_MATRIX_TRANSFORM_ROW_COLUMN_MAP(1, 0) // Keymap (Row 0, Col 1) -> Physical (Row 1, Col 0)
               ZMK_MATRIX_TRANSFORM_ROW_COLUMN_MAP(2, 0) // Keymap (Row 0, Col 2) -> Physical (Row 2, Col 0)
              >;
    };
};
