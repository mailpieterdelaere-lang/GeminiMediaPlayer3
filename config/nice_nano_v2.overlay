#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan_0;
        zmk,matrix-transform = &matrix_transform_0;
    };

    kscan_0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN_0";

        // Define GPIOs for your 3-key board
        row-gpios = <&gpio0 3 0>;  // One row only (P0.03)
        col-gpios = <&gpio0 4 0>, <&gpio0 5 0>, <&gpio0 28 0>; // Three columns

        row-pull-ups;
        col-pull-downs;
    };

    matrix_transform_0: matrix_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <1>;
        columns = <3>;
        // Each pair corresponds to a key position: (row, column)
        map = <ZMK_MATRIX_TRANSFORM(0 0 0 1 0 2)>;
    };

    &led_strip {
        status = "disabled";
    };
};
