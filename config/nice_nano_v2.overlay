#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan_0;
        zmk,matrix-transform = &matrix_transform_0;
    };

    kscan_0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN_0";
        
        row-gpios = <&gpio0 3>, <&gpio0 4>; 
        col-gpios = <&gpio0 5>, <&gpio0 28>;

        row-pull-ups;
        col-pull-downs;
    };

    matrix_transform_0: matrix_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <2>;
        columns = <2>;
        
        // FINAL FIX: Use double angle brackets AND nested parentheses inside the macro.
        // This forces the preprocessor to treat the map as one element, preventing the 'malformed value' error.
        map = <<ZMK_MATRIX_TRANSFORM( (0 0 0 1 1 0 1 1) )>>; 
    };

    &led_strip {
        status = "disabled";
    };
};
