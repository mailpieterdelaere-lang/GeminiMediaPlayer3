#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &matrix_transform0;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN_0";

        row-gpios = <&gpio0 3 (GPIO_ACTIVE_HIGH)>;     // Row: P0.03
        col-gpios = <&gpio0 4 (GPIO_ACTIVE_HIGH)>,     // Col 1: P0.04
                     <&gpio0 5 (GPIO_ACTIVE_HIGH)>,     // Col 2: P0.05
                     <&gpio0 28 (GPIO_ACTIVE_HIGH)>;    // Col 3: P0.28

        row-pull-ups;
        col-pull-downs;
    };

    matrix_transform0: matrix_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <1>;
        columns = <3>;
        map = <0 1 2>;
    };
};

/* âœ… Node references like &led_strip must be outside any / { } block */
&led_strip {
    status = "disabled";
};
