#include <dt-bindings/zmk/matrix_transform.h>

/* Define the key matrix and pin assignments for the mediapad3 on nice_nano_v2. */

/ {
    chosen {
        zmk,kscan = &kscan_0; 
        zmk,matrix-transform = &matrix_transform_0; 
    };

    kscan_0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix"; 
        label = "KSCAN_0";
        
        row-gpios = <&pro_micro_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&pro_micro_d 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&pro_micro_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
                     
        col-gpios = <&pro_micro_d 18 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; 
    };

    matrix_transform_0: matrix_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <1>;
        columns = <3>;
        // CRITICAL FIX: Single-line definition to prevent all multi-line parse errors
        map = <ZMK_MATRIX_TRANSFORM_ROW_COLUMN_MAP(0, 0) ZMK_MATRIX_TRANSFORM_ROW_COLUMN_MAP(1, 0) ZMK_MATRIX_TRANSFORM_ROW_COLUMN_MAP(2, 0)>;
    };
};
