/* Define the key matrix and pin assignments for the mediapad3 on nice_nano_v2. */

/ {
    chosen {
        zmk,kscan = &kscan_0; // Point to the node we define
    };

    kscan_0: kscan_0 { // Create the node with the label kscan_0
        compatible = "zmk,kscan-direct-gpios";
        label = "KSCAN_0";
        
        // Use the numerical flag '3' for (GPIO_ACTIVE_LOW | GPIO_PULL_UP)
        direct-gpios = <&pro_micro_d 2 3>, // D2
                       <&pro_micro_d 4 3>, // D4
                       <&pro_micro_d 6 3>; // D6
    };
};
