#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan_0;
        zmk,matrix-transform = &matrix_transform_0;
    };

    kscan_0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN_0";

        row-gpios = <&gpio0 2 0> <&gpio0 4 0> <&gpio0 6 0>;
        col-gpios = <&gpio0 18 0>;
    };

    matrix_transform_0: matrix_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <3>;
        columns = <1>;
        map = <ZMK_MATRIX_TRANSFORM(0 0 1 0 2 0)>;
    };

    &led_strip {
        status = "disabled";
    };
};
