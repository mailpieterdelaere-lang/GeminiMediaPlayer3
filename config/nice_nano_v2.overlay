#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan_0;
        zmk,matrix-transform = &matrix_transform_0;
    };

    kscan_0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN_0";

        row-gpios = <&gpio0 3 0>;            // P0.03  (one row)
        col-gpios = <&gpio0 4 0>, <&gpio0 5 0>, <&gpio0 28 0>; // three columns

        row-pull-ups;
        col-pull-downs;
    };

    matrix_transform_0: matrix_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <1>;
        columns = <3>;

        // This defines a flat, 1Ã—3 key matrix (no commas, no nested brackets)
        map = <0 1 2>;
    };

    &led_strip {
        status = "disabled";
    };
};
